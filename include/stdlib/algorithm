#ifndef __STDCXX_ALGORITHM__
#define __STDCXX_ALGORITHM__

#include <utility>

namespace std {

// based on operator <

template <typename T>
T const &(min)(T const &a, T const &b)
{
	return b < a ? b : a;
}

template <typename T>
T const &(max)(T const &a, T const &b)
{
	return a < b ? b : a;
}

/* NOTE: std::move has only existed since C++11. However, it is required here to
 * match some translation units.
 */

template <typename T>
void (swap)(T &a, T &b)
{
	T tmp = (::std::move)(a);
	a = (::std::move)(b);
	b = (::std::move)(tmp);
}

} // namespace std

#endif // __STDCXX_ALGORITHM__
